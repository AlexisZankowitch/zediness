{
  "method": "post",
  "uri": "{uri}devices/streaming-connections",
  "headers": {
    "Authorization": "Bearer {token}",
    "Cache-Control": "no-cache",
    "Content-Type": "application/json"
  },
  "body": {
    "filter": {
      "type": [
        "attributeUpdate",
        "eventUpdate",
        "configurationUpdate"
      ],
      "deviceId": [
        "{ds_d_id}"
      ]
    }
  },
  "json": true
}